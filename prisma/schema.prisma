datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  mobile    String?
  role      String   @default("employee") // "manager" ya "employee"
  tasks     Task[]   @relation("UserTasks")
  teams    TeamMember[] 
  createdAt DateTime @default(now())
}

model Team {
  id      Int      @id @default(autoincrement())
  name    String
  members TeamMember[]
  tasks   Task[]   @relation("TeamTasks")
}

model TeamMember {
  id      Int    @id @default(autoincrement())
  teamId  Int
  userId  Int
  team    Team   @relation(fields: [teamId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
}

model Task {
  id              Int      @id @default(autoincrement())
  title           String
  description     String?
  completed       Boolean  @default(false)
  dueDate         DateTime?
  createdAt       DateTime @default(now())

  
  userId          Int?  
  user            User?   @relation("UserTasks", fields: [userId], references: [id])

  assignedToTeamId Int?
  assignedToTeam   Team?   @relation("TeamTasks", fields: [assignedToTeamId], references: [id])
}
